<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ScenarioNameEditIssue</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISCHANGED(Name), 
NOT(ISCHANGED( ValidationRuleBypass__c)),
$Profile.Name != &quot;SYSTEM ADMINISTRATOR&quot;)</errorConditionFormula>
    <errorDisplayField>Name</errorDisplayField>
    <errorMessage>Case Scenario Name can only be changed by using the Edit button</errorMessage>
</ValidationRule>
